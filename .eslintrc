{
  "extends": "eslint:recommended",
  "globals": {
    "window": true,
    "require": true,
    "define": true
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "comma-dangle": ["error", "never"],
    "no-extra-boolean-cast": 0
  }
}